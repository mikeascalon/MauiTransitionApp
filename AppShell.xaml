<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TransitionApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TransitionApp.View"
    
    Shell.FlyoutBehavior="Disabled"
    Title="TransitionApp">

    <ShellContent
        Title="Welcome to TAP Mobile"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <!-- Route for the Task Page -->
    <ShellContent
        Title="TAP Checklist"
        ContentTemplate="{DataTemplate local:TaskPage}"
        Route="TaskPage" />

    <ShellContent 
        Title="Sign up for new account" 
        ContentTemplate="{DataTemplate local:SignUpPage}" 
        Route="SignUpPage" />

    <ShellContent 
        Title="Task Details"
        Route="TaskDetailsPage" 
        ContentTemplate="{DataTemplate local:TaskDetailsPage}" />


</Shell>
